<%
  invited_receiver  = @presenter_obj.invitee_manager.email
  invite_sender = @presenter_obj.inviter_manager.email
%>
<div class="container-fluid py-6 cloud-bg h-100">
  <div class="row">
    <div class="container">
      <div class="row">
        <div class="col-md-6 mx-auto">
          <form id="admin_invite_form" class="form-container-sm user-form"
                action="<%= GlobalConstant::RoutesMap.getApis()[:api_sign_up] %>" method="POST"
                data-ost-formhelper
          >

<!--            <h3 class="text-center">Hi, <%#= invited_receiver %> </h3>-->
            <h3 class="text-center">Welcome to OST</h3>
            <p class="text-center mb-5 font-weight-light"> <%= invite_sender %> has invited you to join your team on OST. â€¨Please choose a password to create your account</p>
            <div class="form-group mb-2">
              <div class="clearfix">
                <label class="form-label float-left" for="password">Password</label>
                <span class="form-label float-right text-capitalize font-weight-light">Minimum 8 characters</span>
              </div>
              <div class="input-group">
                <input type="password" class="form-control form-control-input-group" placeholder="Password"
                       id="password" name="password" required minlength="8" />
                <div class="input-group-append">
                  <span class="input-group-text input-group-inline input-group-eye">
                    <svg class="icon">
                      <switch>
                        <use xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="#icon-eye"></use>
                      </switch>
                    </svg>
                  </span>
                </div>
                <div class="invalid-feedback" data-forid="password">&nbps;</div>
              </div>
              <div class="zxcvbn-group"></div>
            </div>
            <div class="form-group mb-2">
              <label class="form-label" for="confirm_password">Confirm Password</label>
              <input type="password" class="form-control" id="confirm_password" name="confirm_password" placeholder="Confirm Password" required minlength="8" />
              <div class="invalid-feedback" data-forid="password">&nbps;</div>
            </div>


            <input type="text" class="form-control" id="i_t" name="i_t" value = <%= invite_token %> hidden />

            <div class="form-group text-center mt-3">
              <button type="submit" class="btn btn-gold">Set Password</button>
            </div>

            <div class="general_error invalid-feedback" data-forid="admin_invite_form">&nbsp;</div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>


