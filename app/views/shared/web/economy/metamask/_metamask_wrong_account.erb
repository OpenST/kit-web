<%
  # @Shradha: Get new image where the network is blured.
  cover_img_path = "//dxwfxs8b4lg24.cloudfront.net/ost-kit/images/ost-metamask-wrong-account.jpg";
  cover_img_path = "https://dxwfxs8b4lg24.cloudfront.net/ost-kit/images/ost-kit-metamask-wrong-account-image-v2.png";

%>

<div class="row ost__planner">
  <div class="col-12 pt-6">
    <h3 class="text-center font-weight-bold letter-space-1">Looks like the current MetaMask account is associated with another email address.</h3>
  </div>
</div>
<div class="row ost__planner">
  <div class="col-12 col-md-6 ml-auto mr-auto">
    <div class="text-center">
      <p class="font-weight-light mb-5 text-muted">Please open MetaMask and switch to your registered account or create a new account.</p>
      <img src="<%= cover_img_path %>" class="img-fluid" width="357" />
      <%=
        faqs_data = [
          {
            title: 'Why do I need to use Chrome and install MetaMask?',
            url: 'https://help.ost.com/support/solutions/articles/35000059263-why-do-i-need-to-install-metamask-'
          },
          {
            title: 'How do I unlock MetaMask?',
            url: 'https://help.ost.com/support/solutions/articles/35000059264-how-do-i-unlock-metamask-'
          },
          {
            title: 'Why can I use only one MetaMask account with OST KIT?',
            url: 'https://help.ost.com/support/solutions/articles/35000059265-why-can-i-use-only-one-metamask-account-with-ost-kit%E2%8D%BA-'
          }
        ]
        render :partial => "shared/web/common/faqs",
               locals: {
                 header: "FAQ for installing MetaMask",
                 faqs: faqs_data
               }
      %>
    </div>
  </div>
</div>